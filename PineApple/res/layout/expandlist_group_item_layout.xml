<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50.0dip"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/hl_ItemHeader_Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:layout_marginLeft="10.0dip"
            android:layout_weight="0.0"
            android:gravity="left"
            android:singleLine="true"
            android:textColor="@color/cl_normal_black"
            android:textSize="17.0sp" />

        <TextView
            android:id="@+id/hl_ItemHeader_Line"
            android:layout_width="fill_parent"
            android:layout_height="1.0dip"
            android:layout_gravity="center"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="-30.0dip"
            android:layout_weight="1.0"
            android:background="@color/cl_Line" />

        <Button
            android:id="@+id/ib_ItemHeader_cate"
            android:layout_width="100.0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center"
            android:layout_marginRight="1.0dip"
            android:layout_weight="0.0"
            android:background="@drawable/vd_btn_more_select" />
    </LinearLayout>

</LinearLayout>