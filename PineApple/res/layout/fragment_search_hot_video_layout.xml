<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cl_normal_background"
    android:padding = "12dip"
    android:orientation="vertical" >
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView 
            android:id="@+id/hot_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_search_title"
            android:layout_centerVertical="true"
            android:textSize="20sp"
            
            />
        <TextView 
            android:id="@+id/change_hot_word"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/change_hot_word"
            android:layout_alignParentRight="true"
            android:textColor="@color/cl_normal_ayellow"
            />
    </RelativeLayout>
    
    <GridView 
        android:id="@+id/gridview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:numColumns="3"
        android:layout_marginTop="8dip"
        android:horizontalSpacing="4dip"
        android:verticalSpacing="6dip"
        android:listSelector="#00000000"
        android:scrollbars="@null"
        >
        
    </GridView>
</LinearLayout>
